        function TiepNhan(e) {
            e.preventDefault();
            var grid = this;
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
            var IDHoSo = dataItem.IDHoSo;
            window.location.href = "/ThuLyHoSo/ThuLy?IDHoSo=" + IDHoSo;
        }
    </script>


}